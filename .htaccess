# ========================================

# Configurações Apache - CORS & Headers

# ========================================

# Habilitar mod_rewrite

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Remover .php das URLs
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-l
    RewriteRule ^([^\.]+)$ $1.php [L]
    
    # NOTA: Redirect HTTPS é feito pelo Traefik, não no Apache
    # Traefik middleware "redirect-to-https" cuida disso
</IfModule>

# ========================================

# CORS Headers - Permite requisições de qualquer origem

# ========================================

<IfModule mod_headers.c>
    # Permitir acesso de qualquer origem
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization, Cache-Control, x-api-key"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH, HEAD"
    Header set Access-Control-Max-Age "86400"
    
    # Permitir credenciais (importante para localStorage)
    Header set Access-Control-Allow-Credentials "true"
    
    # Security Headers
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache busting headers
    Header set Cache-Control "public, max-age=3600"
    
    # CORS preflight requests
    Header always set Access-Control-Allow-Origin "*"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# ========================================

# Tratamento OPTIONS (preflight CORS)

# ========================================

<IfModule mod_rewrite.c>
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [L]
</IfModule>

# ========================================

# Compressão Gzip

# ========================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript 
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml+rss
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE font/opentype
    
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

# ========================================

# Cache Headers para Assets

# ========================================

<FilesMatch "\.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|otf)$">
Header set Cache-Control "public, max-age=31536000, immutable"
Header set Expires "Wed, 20 Jan 2027 04:20:42 GMT"
</FilesMatch>

# ========================================

# Negar acesso a arquivos sensíveis

# ========================================

<FilesMatch "^\.|\.htaccess|\.env|\.git|composer\.|config\.php|debug|test">
Order allow,deny
Deny from all
</FilesMatch>

# ========================================

# Desabilitar directory listing

# ========================================

Options -Indexes

# ========================================

# Configurações PHP

# ========================================

<IfModule mod_php.c>
    php_flag display_errors On
    php_flag log_errors On
    php_value error_log /var/log/php_errors.log
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value memory_limit 256M
    php_value max_execution_time 300
</IfModule>

# ========================================

# Bloquear acesso direto a certos arquivos

# ========================================

<FilesMatch "\.env$">
Order allow,deny
Deny from all
</FilesMatch>
